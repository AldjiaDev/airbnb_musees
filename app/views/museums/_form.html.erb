<%= simple_form_for museum do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "Nom du Musée", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :location, label: "Localisation", input_html: { class: "form-control" } %>
  </div>

  <%= f.submit museum.persisted? ? "Modifier" : "Créer", class: "btn btn-success mt-3" %>
<% end %>

